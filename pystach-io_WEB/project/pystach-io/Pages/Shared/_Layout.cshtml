<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="UTF-8">

    <title>@ViewBag.title</title>

    <link rel="icon" type="image/png" href="~/images/pistachio.png">
    <link rel="apple-touch-icon" sizes="512x512" href="~/images/pistachio.png" />

    <meta name="description" content="If you read this ... why?!">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#fff" />

    <link href="https://pystach.io/manifest.json" rel="manifest" />

    <link href="~/css/all.min.css" rel="stylesheet" media="all">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" media="all">
    <link href="~/css/base.css" rel="stylesheet" media="all">

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js" async></script>
    <script src="~/js/sweetalert2.all.min.js"></script>
    <script src="~/js/function.1.1.js"></script>
    <script src="~/js/popper.min.js" async></script>

    <script>navigator.serviceWorker.register('/service-worker.js');</script>

    <style>
        @@font-face {
            font-family: "Quicksand";
            font-style: normal;
            font-weight: 300;
            src: url(/webfonts/Quicksand.ttf) format('truetype');
            font-display: swap;
        }
    </style>

    @RenderSection("Head", required: false)
</head>

    <body class="container">

        <!-- HEADER -->
        <header class="pt-1 pr-5 pl-5 mb-5 mt-2">
            <a href="./Index" style="text-decoration: none;">
                <h1 class="text-center" style="font-size: 3.8em; font-family: 'Quicksand', sans-serif; color: #7EA08B">
                    <i class="fas fa-map-marked-alt"></i> PyStach.io<span class="fst-italic" style="font-size: 0.25em;">v.α</span>
                </h1>
            </a>
        </header>

        <!-- MAIN DIV -->
        <div class="mt-3 mb-4 pl-5 pr-5 shadow-lg" style="background-color : #f8edeb; border-radius: 20px;">

            <!-- TOP NAV -->
            <div class="nav nav-tabs nav-fill" id="nav-tab" style="font-family: 'Quicksand', sans-serif; font-size: 1.5em">
                <a href="./Index" class="nav-link @TabNavPages.HomeNavClass(ViewContext)" style="color: #7EA08B; border-top-left-radius: 15px; border-top-right-radius: 15px;">Home</a>
                <a href="./Informations" class="nav-link @TabNavPages.InfosNavClass(ViewContext)" style="color: #7EA08B; border-top-left-radius: 15px; border-top-right-radius: 15px; ">Informations</a>
            </div>

            <!-- TAB CONTENT -->
            <div class="tab-content">
                @RenderBody()
            </div>

        </div>

        <!-- FOOTER -->
        <div class="mb-3 p-2 shadow-lg text-center" style="background-color : #f8edeb; border-radius: 20px;">
            <p style="font-family: 'Quicksand', sans-serif; font-size: 1.3em; margin-bottom: 3px;" class="pt-1">
                Made with <i class="fas fa-heart text-danger"></i> by Louis Fiori aka s0rcy-r.
            </p>

            <div>
                @*<a href="/fr/"><img src="~/images/france.png" class="img-fluid" /></a>*@
                @*<a href="/en/"><img src="~/images/united-kingdom.png" class="img-fluid" /></a>*@
            </div>

            <a href="https://www.linkedin.com/in/louis-fiori-it/" target="_blank" class="p-3" style="font-size: 2em; color: black;" rel="noreferrer"><i class="fab fa-linkedin"></i></a>
            <a href="https://twitter.com/s0rcy_r" target="_blank" class="p-3" style="font-size: 2em; color: black;" rel="noreferrer"><i class="fab fa-twitter-square"></i></a>
            <a href="https://github.com/s0rcy-r" target="_blank" class="p-3" style="font-size: 2em; color: black;" rel="noreferrer"><i class="fab fa-github-square"></i></a>
        </div>
    </body>

</html>
